<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView" android:src="@mipmap/icon"
        android:scaleType="centerInside"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" android:onClick="openGithub" android:clickable="true"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:text=""
        android:id="@+id/textView3"
        android:layout_centerVertical="true" android:gravity="center" android:onClick="openGithub"
        android:clickable="true"/>

    <Button
    android:id="@+id/button_accessible"
    android:text="@string/service_name"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:onClick="onButtonClicked" android:layout_alignParentBottom="true"
    android:background="#d5fad7" android:textColor="#ff666666"
    style="?android:attr/borderlessButtonStyle"

    />
</RelativeLayout>